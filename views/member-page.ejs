<%- include('partials/header') %>
    <main>
        <section class="members__offers">
            <h2 class="members__offers--title">Member page</h2>
            <div class="members__offers--images">
                <img src="/assets/offers.png">
                <img src="/assets/offers.png">
                <img src="/assets/offers.png">
                <img src="/assets/offers.png">
            </div>
        </section>

        <article class="review">
            <h3 class="review__title">Review form</h3>

            <form class="review__form" id="reviewForm">
                <div class="review__field">
                    <label class="review__label" for="movieTitle">Movie</label>
                    <select class="review__input" id="movieTitle" name="movieTitle" required>
                        <option value=" selected ">Choose a movie</option>
                        <option value="Neon Dreams">Neon Dreams</option>
                        <option value="The Last Sunset">The Last Sunset</option>
                        <option value="Echoes of Silence">Echoes of Silence</option>
                    </select>
                </div>

                <div class="review__field">
                    <label class="review__label" for="rating">Rating (1â€“5)</label>
                    <input class="review__input" id="rating" name="rating" type="number" min="1" max="5" required />
                </div>

                <div class="review__field">
                    <label class="review__label" for="reviewText">Your review</label>
                    <textarea class="review__input review__textarea" id="reviewText" name="reviewText" rows="4"
                        minlength="10" maxlength="500" required
                        placeholder="Write at least 10 characters..."></textarea>
                </div>

                <div class="review__actions">
                    <button class="review__btn" type="submit">Submit review</button>
                </div>
            </form>

        </article>

        </section>
    </main>
<%- include('partials/footer') %>