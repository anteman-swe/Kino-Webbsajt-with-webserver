<!-- header.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <% if (locals.pageTitle) { %>
    <title><%= pageTitle %></title>
 <% } else { %>
  <title>Kino Bio</title>
 <% } %>
 <link rel="icon" type="image/x-icon" href="../assets/favicon.ico">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" type="text/css" href="../css/main.css">
</head>
<body>
  <!-- Info / notice bar -->
  <div class="notice" role="status" aria-live="polite">
    <p class="notice__text">Biljetter kan enbart köpas på biografen! <br> Välkommen till oss på Storgatan 12.</p>
    <span class="notice__hours">Öppettider: 08:00 – 22:00</span>
    <button class="notice__close" type="button" aria-label="Stäng notis">&times;</button>
  </div>
  <header class="header">
    <div class="header__theme">
      <button class="header__theme-btn header__theme-btn--light" aria-label="toggle light">
        <img class="header__theme-icon" src="/assets/toggle2-light.png" alt="Light mode icon">
      </button>

      <button class="header__theme-btn header__theme-btn--dark" aria-label="toggle dark">
        <img class="header__theme-icon" src="/assets/toggle1-dark.png" alt="Dark mode icon">
      </button>
    </div>
    <div class="header__top">
      <button class="header__menu-button" aria-label="Menu">☰ MENY</button>
      <img class="header__logo-dark" src="/assets/logo1-dark.png" alt="Logga - Kino bio">
      <img class="header__logo-light" src="/assets/logo2-light.png" alt="Logga - Kino bio">

      <div class="auth-buttons">
        <button class="header__member-btn" aria-label="Logga in">Member</button>
        <button class="header__login-btn" aria-label="Logga in">JOIN / LOGIN</button>
        <button class="open-register">Registrera dig</button>
      </div>
    </div>
    <div class="login">
      <div class="login__modal">
        <div class="login__content">
          <button class="login__close" aria-label="Stäng">✕</button>
          <h2 class="login__title">Logga in</h2>
          <form class="login__form">
            <input class="login__input" type="email" placeholder="E-post" name="email" required>
            <input class="login__input" type="password" placeholder="Lösenord" name="password" required>

            <a href="#" class="login__forgot">Glömt lösenord?</a>
            <button class="login__submit" type="submit">Logga in</button>
          </form>
        </div>
      </div>
    </div>
    <div class="register">
      <div class="register__modal">
        <div class="register__content">
          <button class="register__close" aria-label="Stäng">✕</button>
          <h2 class="register__title">Registrera dig</h2>
          <form class="register__form">
            <input class="register__input" type="text" placeholder="Namn" name="username" required>
            <input class="register__input" type="email" placeholder="E-post" name="email" required>
            <input class="register__input" type="password" placeholder="Lösenord" name="password" required>
            <button class="register__submit" type="submit">Skapa konto</button>
          </form>
        </div>
      </div>
    </div>
    <nav class="header__nav">
      <button class="header__nav-close" aria-label="Stäng menyn">✕
        <span class="close-menu">MENY</span>
      </button>
      <img class="header__nav-logodark" src="/assets/logo1-dark.png" alt="Logga - Kino bio">
      <img class="header__nav-logolight" src="/assets/logo2-light.png" alt="Logga - Kino bio">
      <ul class="header__nav-list">
        <li class="header__nav-item"><a href="index.html">På bio just nu</a></li>
        <li class="header__nav-item"><a href="all-movies.html">Kommande filmer</a></li>
        <li class="header__nav-item"><a href="#">Barnbio</a></li>
        <li class="header__nav-item"><a href="#">Presentkort</a></li>
        <li class="header__nav-item"><a href="#">Café&Bistro</a></li>
        <li class="header__nav-item"><a href="#">Event</a></li>
        <li class="header__nav-item"><a href="#">Kundservice</a></li>
        <li class="header__nav-item"><a href="#">Mina sidor</a></li>
        <li class="header__nav-item"><a href="#">Företag</a></li>
      </ul>
    </nav>
  </header>